<div class="header py-4">
    <div class="container">
        <div class="d-flex">
            <a class="header-brand" href="{{ path_for("home") }}">
                <img src="{{ base_url() }}/public/assets/images/logo.png" class="header-brand-img" alt="Logo"> Crazy Charly Frogs
            </a>
            {% if auth.check %}
                <div class="d-flex order-lg-2 ml-auto">
                    <div class="dropdown">
                        <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
                            <span class="avatar" style="background-image: url({{ base_url() }}/public/assets/images/logo.png)"></span>
                            <span class="ml-2 d-none d-lg-block">
                                <span class="text-default">{{ auth.user.username }}</span>
                                {% if auth.user.admin %}
                                    <small class="text-muted d-block mt-1">Administrateur</small>
                                {% else %}
                                    <small class="text-muted d-block mt-1">Utilisateur</small>
                                {% endif %}
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                            <a class="dropdown-item" href="{{ path_for("showAccount") }}">
                                <i class="dropdown-icon fe fe-user"></i> Profil
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="dropdown-icon fe fe-settings"></i> Paramètres
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path_for("logout") }}">
                                <i class="dropdown-icon fe fe-log-out"></i> Déconexion
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="d-flex order-lg-2 ml-auto">
                    <div class="dropdown">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-users"></i> Espace membre
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path_for("showLogin") }}"><i class="dropdown-icon fas fa-sign-in-alt"></i> Connexion</a>
                            <a class="dropdown-item" href="{{ path_for("showRegister") }}"><i class="dropdown-icon fas fa-user-plus"></i> Inscription</a>
                        </div>
                    </div>
                </div>
            {% endif %}
            <a href="#" class="header-toggler d-lg-none ml-3 ml-lg-0" data-toggle="collapse" data-target="#headerMenuCollapse">
                <span class="header-toggler-icon"></span>
            </a>
        </div>
    </div>
</div>
<div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg order-lg-first">
                <ul class="nav nav-tabs border-0 flex-column flex-lg-row">
                    <li class="nav-item">
                        <a href="{{ path_for("home") }}" class="nav-link {% if current_page == "home" %} active {% endif %}"><i class="fe fe-home"></i> Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link {% if current_page == "test" %} active {% endif %}"><i class="fe fe-home"></i> Test</a>
                    </li>
                    {% if auth.check and auth.user.admin %}
                        <li class="nav-item">
                            <a href="{{ path_for("showAdmin") }}" class="nav-link {% if current_page == "admin" %} active {% endif %}"><i class="fe fe-home"></i> Espace Administrateur</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>